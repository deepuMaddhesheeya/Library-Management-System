@model IEnumerable<LibraryManagementSystem.Models.Book>

<h2>Books</h2>
<a asp-action="Create" class="btn btn-primary">Add Book</a>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Author</td>
            <td>@(item.IsIssued ? "Issued" : "Available")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                @if (!item.IsIssued)
                {
                    <a asp-action="Issue" asp-route-id="@item.Id">Issue</a>
                }
                else
                {
                    <a asp-action="Return" asp-route-id="@item.Id">Return</a>
                }
            </td>
        </tr>
    }
</table>
